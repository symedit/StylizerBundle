<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="isometriks_stylizer.listener.controller.class">Isometriks\Bundle\StylizerBundle\EventListener\ControllerListener</parameter>
    </parameters>

    <services>
        <service id="isometriks_stylizer.listener.controller" class="%isometriks_stylizer.listener.controller.class%">
            <argument type="service" id="isometriks_stylizer.stylizer" />   
            <tag name="kernel.event_listener" event="kernel.controller" method="onKernelController" priority="100" />
        </service>
    </services>
</container>        

